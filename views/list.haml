%table{:border => 0, :cellpadding => 0, :cellspacing => 0, :class => :list}
  - @drives.each_with_index do |drive,i|
    %tr{:class => "#{:alt if i%2==0}"}
      %td{:class => "#{:separator if i%8==0}"}= i+1
      %td= drive.bn
      %td= drive.model_number
      %td= drive.brand
      %td= drive.size
      %td= drive.speed
      %td= drive.interface
      %td
        %a{:href => "/forget/#{drive.bn}"} forget
